<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Btn1" Content="File Open" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="10,8,0,0" Height="26" Width="119" Click="Btn1_Click"/>
        <DataGrid x:Name="DataGrid_Person" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,47,0,0" CanUserAddRows="False"/>
        <Label x:Name="Label_filePath" Content="File Path" HorizontalAlignment="Left" Margin="134,8,0,0" VerticalAlignment="Top" Width="566"/>
        <Button x:Name="Btn2" Content="Get Data" HorizontalAlignment="Left" Margin="720,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.571,-0.933" Click="Btn2_Click" Height="22" Width="58"/>
        <StackPanel/>
    </Grid>
</Window>
